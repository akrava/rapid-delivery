<!doctype html>
<html lang="ru">
    {{> head}}
    <body>
       <header class="navbar">
            {{> header}}
        </header>
        <main class="container mt-4" role="main">
            <nav aria-label="breadcrumb">
               {{> breadcrumb}}
            </nav>
            {{#invoice}}
            <h1>Накладна №{{number}}</h1>
            <table class="mx-auto styled captioned mt-3 mb-5" id="users">
                <caption>ТТН #{{number}}</caption>
                <tbody>
                    <tr>
                        <td>Номер відправлення</td>
                        <td>{{number}}</td>
                    </tr>
                    <tr>
                        <td>Реєстр</td>
                        <td>{{#registry}}<a class="link-style" target="_blank"{{^isRecipientRoleStandart}} href="/registries/{{number}}"{{/isRecipientRoleStandart}}>{{number}} - {{name}}</a>{{/registry}}</td>
                    </tr>
                    <tr>
                        <td>Відправник</td>
                        <td>{{#sender}}<a class="link-style" target="_blank"{{#loginedUser.role}} href="/users/{{login}}"{{/loginedUser.role}} class="ava"><img src="{{avaUrl}}" height="30" width="30" class="ava small">{{fullname}}</a>{{/sender}}</td>
                    </tr>
                    <tr>
                        <td>Отримувач</td>
                        <td>{{#recipient}}<a class="link-style" target="_blank"{{#loginedUser.role}} href="/users/{{login}}"{{/loginedUser.role}} class="ava"><img src="{{avaUrl}}" height="30" width="30" class="ava small">{{fullname}}</a>{{/recipient}}</td>
                    </tr>
                    <tr>
                        <td>Дата відправленя</td>
                        <td>{{departure}}</td>
                    </tr>
                    <tr>
                        <td>Дата прибуття</td>
                        <td>{{arrival}}</td>
                    </tr>
                    <tr>
                        <td>Поточне місцезнаходження</td>
                        <td>{{location}}</td>
                    </tr>
                    <tr>
                        <td>Опис вантажу</td>
                        <td>{{description}}</td>
                    </tr>
                    <tr>
                        <td>Вартість доставки, грн.</td>
                        <td>{{cost}}</td>
                    </tr>
                    <tr>
                        <td>Вага, кг</td>
                        <td>{{weight}}</td>
                    </tr>
                </tbody>
            </table>
            <div class="gallery text-center p-3 pb-4">
                <p class="font-weight-bold text-center">Фото відправлення:</p>
                <img class="view-default img-fluid mx-auto" style="max-height: 500px" src="{{photoPath}}">
            </div>
            {{#isRecipientRoleStandart}}
                <p class="text-center">Лише перегляд</p>
            {{/isRecipientRoleStandart}}
            {{^isRecipientRoleStandart}}
            <p class="text-center mt-4">Дії з накладною:</p>
            <div class="actions default-form mb-3">    
                <form class="mx-auto form-inline pt-3 update-btn" action="/invoices/edit" method="POST">
                    <input name="id" type="hidden" value="{{id}}">
                    <button class="btn btn-primary btn-sm mx-auto" type="submit">Редагувати накладну</button>
                </form>
                <form class="mx-auto form-inline mt-2 pb-3 update-btn" action="/invoices/remove" method="POST">
                    <input name="id" type="hidden" value="{{id}}">
                    <button class="btn btn-danger btn-sm mx-auto"  data-toggle="modal" data-target="#deleteModal" type="button">Видалити накладну</button>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Підтвердження видалення</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Ви впевнені, що хочете видалити цю накладну?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
                                    <button class="btn btn-danger" type="submit">Видалити</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal END --> 
                </form>
            </div>
            {{/isRecipientRoleStandart}}
            {{/invoice}}
        </main>
        <footer class="footer">
            {{> footer}}
        </footer>   
        {{> scripts}}
    </body>
</html>