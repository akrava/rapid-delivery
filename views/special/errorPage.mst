<!doctype html>
<html lang="ru">
    {{>head}}
    <body>
        <div class="wrapper center">
            <div class="header">
                {{>header}}
            </div>
            <div class="content">
                <div class="errorPage">
                    <span>Sorry, something went wrong...</span>
                    <img src="/images/crying-cat.png" class="center">
                </div>
                <h1 class="errorPage">{{error.title}}</h1>
                <p class="errorPage">{{error.message}}</p>
            </div>
            <div class="footer">
                {{> footer}}
            </div>
        </div>
    </body>
</html>